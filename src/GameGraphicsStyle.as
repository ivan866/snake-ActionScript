package {
	
	/**
	 * Graphic parameters: colors, line styles
	 * @author ivan866
	 */
	public class GameGraphicsStyle {
		
		public var bgLineWidth:uint;
		public var fgLineWidth:uint;
		public var bgColor:uint;
		public var fgColor:uint;
		
		public function GameGraphicsStyle(bgLineWidth:uint, fgLineWidth:uint, bgColor:uint, fgColor:uint) {
			this.bgLineWidth = bgLineWidth;
			this.fgLineWidth = fgLineWidth;
			this.bgColor = bgColor;
			this.fgColor = fgColor;
		}
	
	}

}